<!DOCTYPE html>
<html>
<head>
  <title>ImagesCloset</title>
  <link href='http://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>

    <script src="//code.jquery.com/jquery-2.1.1.min.js"></script>

  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag "application" %>
  <%= csrf_meta_tags %>

  <meta name="viewport" content="width=device-width, initial-scale=1">

</head>
<body>
  <div id="wrapper">
        <div class="container">
          <nav class="navbar navbar-default" role="navigation">
            <div class="container-fluid">
              <!-- Brand and toggle get grouped for better mobile display -->
              <div class="navbar-header">

                <span><strong><%= link_to "ImagesCloset", root_path %></strong></span>
              </div>

              <!-- Collect the nav links, forms, and other content for toggling -->
              <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                  <% if user_signed_in? %>
                    <%= link_to "My Page", images_path, class: "btn btn-primary nav-my-image" %>
                    <%= link_to "Tag Image", tags_path, class: "btn btn-primary nav-tag" %>

                    <%= link_to "Recommend", recs_path, class: "btn btn-primary nav-rec" %>
                    <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-primary nav-sign-out" %>


                  <%else%>
                    <%= link_to "Sign In", new_user_session_path, class: "btn btn-primary nav-sign-in" %>
                    <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary nav-sign-up" %>
                  <%end%>
                </ul>

                <!-- <ul class="nav navbar-nav navbar-right upload">
                  <li><%= link_to 'Upload Image', new_image_path %></li>
                  <li class="dropdown">

                  </li>
                </ul> -->
              </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
          </nav>
        <%= yield %>
      </div>
  </body>
</html>


<header>
    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-static-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                </button>
                <!-- navbar-brand is hidden on larger screens, but visible when the menu is collapsed -->
                <a class="navbar-brand" href="#">Comedy Bucket</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav">
                <li><%= link_to "ImagesCloset", root_path %></li>
                  <% if user_signed_in? %>
                    <li><%= link_to "My Page", images_path, class: "btn btn-primary nav-my-image" %></li>
                    <li><%= link_to "Tag Image", tags_path, class: "btn btn-primary nav-tag" %></li>
                    <li><%= link_to "Recommend", recs_path, class: "btn btn-primary nav-rec" %></li>
                    <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-primary nav-sign-out" %></li>
                  <%else%>
                    <li><%= link_to "Sign In", new_user_session_path %></li>
                    <li><%= link_to "Sign Up", new_user_registration_path %></li>
                  <%end%>
              </ul>
            </div>
          </div>
        </nav>

  </header>
